# Google Sheets API Configuration
# Copy this file to .env and fill in your actual values

# Google Sheets Credentials (JSON)
# Paste the entire content of your service account JSON file here
# Example: {"type": "service_account", "project_id": "...", ...}
GOOGLE_SHEETS_CREDENTIALS=

# Google Spreadsheet URL (optional)
# The URL of the Google Spreadsheet to use for storing registration data
# Example: https://docs.google.com/spreadsheets/d/1AbCdEfGhIjKlMnOpQrStUvWxYz0123456789/edit#gid=0
GOOGLE_SPREADSHEET_URL=

# Google Spreadsheet Name (optional)
# The name of the Google Spreadsheet to use for storing registration data
# Default: "Meloria Event Registration"
GOOGLE_SPREADSHEET_NAME=Meloria Event Registration